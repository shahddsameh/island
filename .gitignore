# Ignore WordPress Core files (you typically don't need to commit WordPress core files)
wp-admin/
wp-includes/

# Ignore WordPress content directories that aren't part of your project
wp-content/cache/
wp-content/backups/
wp-content/upgrade/
wp-content/uploads/

# Ignore plugin/theme vendor directories (e.g., Composer or npm packages)
wp-content/plugins/vendor/
wp-content/themes/vendor/

# Ignore logs and temporary files
*.log
*.tmp
*.swp

# Ignore OS-specific files (Mac, Windows)
.DS_Store
Thumbs.db

# Ignore build or deploy directories (optional if you're using a build system)
dist/
node_modules/

# Ignore any sensitive files
wp-config.php
.env

# Ignore database dumps or any backup files
*.sql
*.tar.gz
*.zip

# Ignore IDE and editor-specific files
.idea/
.vscode/
*.sublime-workspace
*.sublime-project
